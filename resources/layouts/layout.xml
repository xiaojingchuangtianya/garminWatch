<layout id="WatchFace">
    <drawable class="Background" />
<!-- 将位置参数定义在这个文件里，然后通过view去改变一级动态生成 -->
    <!-- 温度块 -->
    <drawable id="TemperatureDraw" class="Temperature">
        <param name="width">112</param>
        <param name="height">110</param>
        <param name="posX">0</param>
        <param name="posY">0</param>
    </drawable>

    <!-- 心率块 -->
    <drawable id="HeartRateDraw" class="HeartRate">
        <param name="width">112</param>
        <param name="height">52</param>
        <param name="posX">112</param>
        <param name="posY">0</param>
    </drawable>
    
    <!-- 时间块：农历，新历，周几，时间 -->
    <drawable id="TimeShowDraw" class="TimeShow">
        <param name="width">112</param>
        <param name="height">52</param>
        <param name="posX">112</param>
        <param name="posY">0</param>     
    </drawable>

    <!-- 这里如果将label拆开，不需要更新时不处理会降低一定消耗 -->
    <label id="TimeLabel" x="220" y="40"  justification="Graphics.TEXT_JUSTIFY_RIGHT" color="Graphics.COLOR_BLUE" > -->
    </label>
<![CDATA[


    <!-- 比较多的数据展示模块 -->
    <drawable id="DateFieldDraw" class="DateField">
        
    </drawable>

]]>

	

    


</layout>
